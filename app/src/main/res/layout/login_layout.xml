<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:id="@+id/loginAccount_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="133dp"
        android:text="账号" />

    <TextView
        android:id="@+id/loginPassword_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/loginAccount_textView"
        android:layout_marginTop="174dp"
        android:text="密码" />

    <EditText
        android:id="@+id/loginPassword_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/loginAccount_textView"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/loginAccount_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/loginAccount_textView"
        android:layout_alignStart="@+id/loginPassword_editText"
        android:ems="10" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="124dp"
        android:layout_marginTop="217dp"
        android:text="登录"
        android:enabled="false"/>
    <TextView
        android:id="@+id/result_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/login_button"/>
</RelativeLayout>
